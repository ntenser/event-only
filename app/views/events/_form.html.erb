<!-- we have access to @location throughout our Event views, and we passed in the event object -->
<%= form_for [@location, event] do |f| %>

<p>
  <%= f.label :name %>
  <%= f.text_field :name %>
</p>

<p>
  <%= f.label :location_id %>
  <%= f.text_field :city %>
</p>

<p>
  <%= f.label :date %>
  <%= f.text_field :date %>
</p>

<p>
  <%= f.label :capacity %>
  <%= f.text_field :capacity %>
</p>

<p>
  <%= f.submit %>
</p>

<% end %>
